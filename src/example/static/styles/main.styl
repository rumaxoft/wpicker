@import "../../../wpicker/wpicker.styl"

$elevation-1dp = 0px 1px 3px rgba(0, 0, 0, 0.2), 0px 2px 2px rgba(0, 0, 0, 0.12), 0px 0px 2px rgba(0, 0, 0, 0.14)

.page
	display flex
	flex-direction column
	align-items center
	margin 0
	padding 0
	width 100vw
	height 100vh
	font-family Roboto

.title
	margin-top 100px
	margin-bottom 100px

.wpicker-container
	position absolute
	top 50%
	left 50%
	overflow hidden
	margin 0
	padding 0
	width 300px
	height 300px
	border-radius 8px
	box-shadow $elevation-1dp
	font-size 24px
	transform translateY(-50%) translateX(-50%)
